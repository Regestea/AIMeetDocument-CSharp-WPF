            <!-- User Prompt Text Area -->
            <TextBlock Text="Extera Prompt" Foreground="#fce6ac" FontWeight="SemiBold" FontSize="15"/>
            <TextBox x:Name="UserPromptTextBox" Height="43" Margin="0,5,0,14" AcceptsReturn="True" TextWrapping="Wrap" FontSize="14" BorderBrush="#efa449" BorderThickness="2" Background="#fcdc93">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="BorderBrush" Value="#efa449"/>
                        <Setter Property="BorderThickness" Value="2"/>
                        <Setter Property="Background" Value="#fcdc93"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TextBox">
                                    <Border x:Name="Bd" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" CornerRadius="10">
                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TextBox.Style>
            </TextBox>
             <!-- Auto Filter Checkbox -->
             <StackPanel Margin="0,0,0,14">
                 <CheckBox x:Name="AutoFilterCheckBox" Content="Auto Filter Out Of Subject Contents" 
                          Foreground="#fce6ac" FontWeight="SemiBold" FontSize="15" 
                          Margin="0,5,0,0" VerticalAlignment="Center">
                     <CheckBox.Style>
                         <Style TargetType="CheckBox">
                             <Setter Property="Foreground" Value="#fce6ac"/>
                             <Setter Property="FontWeight" Value="SemiBold"/>
                             <Setter Property="FontSize" Value="15"/>
                             <Setter Property="Template">
                                 <Setter.Value>
                                     <ControlTemplate TargetType="CheckBox">
                                         <Grid>
                                             <Grid.ColumnDefinitions>
                                                 <ColumnDefinition Width="Auto"/>
                                                 <ColumnDefinition Width="*"/>
                                             </Grid.ColumnDefinitions>
                                             
                                             <!-- Custom CheckBox -->
                                             <Border x:Name="CheckBoxBorder" Grid.Column="0" Width="18" Height="18" 
                                                     BorderBrush="#efa449" BorderThickness="2" 
                                                     Background="#fadc93" CornerRadius="3" 
                                                     Margin="0,0,8,0">
                                                 <Path x:Name="CheckMark" Data="M 2,6 L 6,10 L 14,2" 
                                                       Stroke="#000000" StrokeThickness="2" 
                                                       Visibility="Collapsed"/>
                                             </Border>
                                             
                                             <!-- Content -->
                                             <ContentPresenter Grid.Column="1" Content="{TemplateBinding Content}" 
                                                             VerticalAlignment="Center"/>
                                         </Grid>
                                         
                                         <ControlTemplate.Triggers>
                                             <Trigger Property="IsChecked" Value="True">
                                                 <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                                 <Setter TargetName="CheckBoxBorder" Property="Background" Value="#FFD600"/>
                                             </Trigger>
                                             <Trigger Property="IsMouseOver" Value="True">
                                                 <Setter TargetName="CheckBoxBorder" Property="BorderBrush" Value="#FFD600"/>
                                             </Trigger>
                                         </ControlTemplate.Triggers>
                                     </ControlTemplate>
                                 </Setter.Value>
                             </Setter>
                         </Style>
                     </CheckBox.Style>
                 </CheckBox>
             </StackPanel>

            <!-- Whisper Progress Bar with Percentage -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,7">
                <ProgressBar x:Name="WhisperProgressBar" Height="7" Width="143"
                             Foreground="#F29D3A" Background="#FFF3E0" Visibility="Collapsed"
                             Minimum="0" Maximum="100" Value="60"
                             Style="{DynamicResource ModernProgressBar}"/>
                <TextBlock x:Name="WhisperProgressText" Text="0%" FontSize="14" FontWeight="Bold"
                           Foreground="#F29D3A" Margin="10,0,0,0" VerticalAlignment="Center"
                           Visibility="Collapsed"/>
                <TextBlock x:Name="GeminiProgressText" Text="" FontSize="14" FontWeight="Bold"
                           Foreground="#F29D3A" Margin="10,0,0,0" VerticalAlignment="Center"
                           Visibility="Collapsed"/>
            </StackPanel>

            <!-- Start Button Centered -->
            <StackPanel x:Name="ActionPanel" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,14,0,0">
                <Button x:Name="StartButton" Content="Start" Height="43" Width="143" Style="{DynamicResource ModernButton}" Cursor="Hand" FontSize="19"/>
            </StackPanel>

            <!-- Modern Loading & Cancel Centered -->
            <StackPanel x:Name="LoadingPanel" Orientation="Horizontal" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,29,0,0" Height="57">
                <Viewbox Width="57" Height="57" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,19,0">
                    <Grid Width="48" Height="48">
                        <Ellipse Width="48" Height="48" StrokeThickness="6" Stroke="#FFD600" Opacity="0.15"/>
                        <Ellipse Width="48" Height="48" StrokeThickness="6" StrokeDashArray="0,2 8,2" Stroke="#F29D3A">
                            <Ellipse.RenderTransform>
                                <RotateTransform x:Name="SpinnerRotate" Angle="0" CenterX="24" CenterY="24"/>
                            </Ellipse.RenderTransform>
                            <Ellipse.Triggers>
                                <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)" From="0" To="360" Duration="0:0:0.7"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Ellipse.Triggers>
                        </Ellipse>
                    </Grid>
                </Viewbox>
                <Button x:Name="CancelButton" Content="Cancel" Height="48" Width="119" Style="{DynamicResource ModernButton}"
                        HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" Cursor="Hand" FontSize="19"/>
                <TextBlock x:Name="CancelingText" Text="Canceling..." Foreground="#FFD600" FontSize="19" VerticalAlignment="Center" Margin="15,0,0,0" Visibility="Collapsed"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>




