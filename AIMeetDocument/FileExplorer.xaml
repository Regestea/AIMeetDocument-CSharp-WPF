<UserControl x:Class="AIMeetDocument.FileExplorer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:io="clr-namespace:System.IO;assembly=System.Runtime"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="600">
    <Border Background="#212735" CornerRadius="20" Padding="32" Margin="16,0,0,0" Height="400" Width="600"
            Effect="{StaticResource CardDropShadow}">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FCE49C" Offset="0.0"/>
                <GradientStop Color="#F29D3A" Offset="1.0"/>
            </LinearGradientBrush>
        </Border.BorderBrush>
        <Border.BorderThickness>2</Border.BorderThickness>
        <StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="0,0,0,8">
                <Button Width="32" Height="32" Click="BackButton_Click" ToolTip="Back"
                        Background="Transparent" BorderBrush="#fde0a8" BorderThickness="2" Padding="0"
                        HorizontalAlignment="Left" VerticalAlignment="Center"
                        Style="{x:Null}" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Ellipse Fill="#e8a851" Stroke="#fde0a8" StrokeThickness="2"/>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                    <TextBlock Text="⏴" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Button>
                <TextBlock Text="File Explorer" FontWeight="Bold" FontSize="18" Foreground="#FCE49C" Margin="8,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>
            <TextBlock Text="{Binding Path, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                       Foreground="#F29D3A" FontSize="14" Margin="0,0,0,16"/>
            <ListBox x:Name="FilesListBox" Background="#38435b" BorderThickness="0" 
                     ItemsSource="{Binding Items, RelativeSource={RelativeSource AncestorType=UserControl}}"
                     Height="280"
                     MouseDoubleClick="FilesListBox_MouseDoubleClick">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="4">
                            <Ellipse Width="32" Height="32" Fill="#FCE49C" Opacity="0.18" VerticalAlignment="Center"/>
                            <!-- No icon image, just a placeholder ellipse -->
                            <TextBlock Text="📁" FontSize="18" Margin="-28,0,10,0" VerticalAlignment="Center" Visibility="{Binding Converter={StaticResource DirectoryVisibilityConverter}}"/>
                            <TextBlock Text="📄" FontSize="18" Margin="-28,0,10,0" VerticalAlignment="Center" Visibility="{Binding Converter={StaticResource FileVisibilityConverter}}"/>
                            <TextBlock Text="{Binding Name}" FontSize="16" VerticalAlignment="Center" Foreground="#FCE49C"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Padding" Value="6,4"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="FontWeight" Value="Normal"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="#212735"/>
                                            <Setter Property="Foreground" Value="#212735"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="#212735"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="Foreground" Value="#212735"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
        </StackPanel>
    </Border>
</UserControl>
