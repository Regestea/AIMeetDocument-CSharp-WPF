<Window x:Class="AIMeetDocument.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AIMeetDocument"
        mc:Ignorable="d"
        Title="AI Meet Document" Height="450" Width="800"
        MinWidth="1360" MinHeight="768"
        Background="#1A1A2E">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!-- Sidebar -->
        <Border x:Name="Sidebar" Background="#212735" Width="220" VerticalAlignment="Stretch" CornerRadius="0,20,20,0" Margin="0,0,8,0">
            <StackPanel>
                <Button x:Name="SidebarToggle" Content="☰" Width="40" Height="40" Margin="8" Style="{StaticResource ModernButton}" Visibility="Collapsed"/>
                <TextBlock Text="Menu" Foreground="#F29D3A" FontWeight="Bold" FontSize="20" Margin="16,16,0,16"/>
                <!-- Add more sidebar items here -->
                <Button Content="Home" Style="{StaticResource ModernButton}" Margin="8,0,8,8" Click="Home_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="5" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Opacity" Value="0.7"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                
                <Button Content="Settings" Style="{StaticResource ModernButton}" Margin="8,10,8,8" Click="Settings_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="5" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Opacity" Value="0.7"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Border>
        <!-- Main Content -->
        <Grid Grid.Column="1">
            <Grid.Background>
                <ImageBrush ImageSource="Asserts/Background/grid-wave-background.jpg" Stretch="UniformToFill"/>
            </Grid.Background>
            <StackPanel x:Name="CardsPanel" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
                <!-- First Card: Scan for new drive -->
                <Border x:Name="ScanCard" Background="#212735" CornerRadius="20" Padding="32" Margin="0,0,16,0">
                    <Border.BorderBrush>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#FCE49C" Offset="0.0"/>
                            <GradientStop Color="#F29D3A" Offset="1.0"/>
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                    <Border.BorderThickness>2</Border.BorderThickness>
                    <StackPanel x:Name="CardContent" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <!-- Scan Animation Component -->
                        <Grid Width="140" Height="140" HorizontalAlignment="Center" Margin="0,0,0,16">
                            <Ellipse x:Name="ScanEllipse" Width="60" Height="60" Fill="#38435b" Opacity="0.18"/>
                            <Ellipse Width="40" Height="40" Fill="#FCE49C"/>
                            <Viewbox Width="32" Height="32" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Canvas Width="24" Height="24">
                                    <Path Data="M12,2A10,10 0 1,0 22,12" Stroke="#F29D3A" StrokeThickness="2" Fill="Transparent"/>
                                    <Ellipse Width="6" Height="6" Fill="#F29D3A" Canvas.Left="9" Canvas.Top="9"/>
                                </Canvas>
                            </Viewbox>
                        </Grid>
                        <TextBlock Text="Scan for new drive" FontSize="18" Foreground="#FCE49C" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                        <Button Style="{StaticResource ModernButton}" Content="Scan Now" Click="ScanNow_Click" BorderThickness="1">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="5" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="border" Property="Opacity" Value="0.7"/>
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Border>
                <!-- Second Card: Select file manually -->
                <Border x:Name="SelectFileCard" Background="#212735" CornerRadius="20" Padding="32" Margin="16,0,0,0">
                    <Border.BorderBrush>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#FCE49C" Offset="0.0"/>
                            <GradientStop Color="#F29D3A" Offset="1.0"/>
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                    <Border.BorderThickness>2</Border.BorderThickness>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Grid Width="140" Height="140" HorizontalAlignment="Center" Margin="0,0,0,16">
                            <Ellipse Width="60" Height="60" Fill="#38435b" Opacity="0.18"/>
                            <Ellipse Width="40" Height="40" Fill="#FCE49C"/>
                            <Viewbox Width="32" Height="32" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Canvas Width="24" Height="24">
                                    <!-- Music Note Icon -->
                                    <Path Data="M6,22V6l12-2v12" Stroke="#F29D3A" StrokeThickness="2" Fill="Transparent"/>
                                    <Ellipse Width="6" Height="6" Fill="#F29D3A" Canvas.Left="4" Canvas.Top="16"/>
                                    <Ellipse Width="6" Height="6" Fill="#F29D3A" Canvas.Left="14" Canvas.Top="14"/>
                                </Canvas>
                            </Viewbox>
                        </Grid>
                        <TextBlock Text="Select file manually" FontSize="18" Foreground="#FCE49C" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                        <Button Style="{StaticResource ModernButton}" Content="Select File" Click="SelectFile_Click" BorderThickness="1">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="5" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="border" Property="Opacity" Value="0.7"/>
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Border>
                <!-- Device Cards List -->
                <ItemsControl x:Name="DevicesList" Margin="0,32,0,0"
                              ItemsSource="{Binding MediaDevices}"
                              Visibility="{Binding MediaDevices.Count, Converter={StaticResource CollectionToVisibilityConverter}}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <local:MediaDeviceCard DataContext="{Binding}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <!-- End Device Cards List -->
                <StackPanel x:Name="LoadingPanel" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed">
                    <!-- ...existing LoadingPanel code... -->
                </StackPanel>
            </StackPanel>
            <local:SettingsPanel x:Name="SettingsPanelUC" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
        <!-- FileExplorer Host (hidden by default) -->
        <local:FileExplorer x:Name="FileExplorerUC" Visibility="Collapsed" Grid.Column="1"/>
        <!-- AiProccess Host (hidden by default) -->
        <local:AiProccess x:Name="AiProccessUC" Visibility="Collapsed" Grid.Column="1"/>
    </Grid>
</Window>
